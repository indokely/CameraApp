# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
else
  # âœ… Required for VisionCamera, Reanimated & Compressor
  use_frameworks! :linkage => :static
end

target 'CameraApp' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    :hermes_enabled => true # âœ… Hermes is recommended by RN 0.82+
  )

  # ðŸ”¹ VisionCamera (core camera)
  pod 'react-native-vision-camera', :path => '../node_modules/react-native-vision-camera'

  # ðŸ”¹ Reanimated (required for animations + VisionCamera deps)
  pod 'RNReanimated', :path => '../node_modules/react-native-reanimated'

  # ðŸ”¹ FastImage (for optimized image caching)
  pod 'react-native-fast-image', :path => '../node_modules/react-native-fast-image'

  # ðŸ”¹ Video Player (used in Feed, Preview, ViewMedia)
  pod 'react-native-video', :path => '../node_modules/react-native-video'

  # ðŸ”¹ Compressor (for image/video compression)
  pod 'react-native-compressor', :path => '../node_modules/react-native-compressor'

  # âœ… Auto-link other native modules & Flipper (Dev only)
  use_flipper!({ 'Flipper' => '0.201.0' }) unless ENV['CONFIGURATION'] == 'Release'

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
    )

    # âœ… Fix for Xcode 15 + Flipper arch issues
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"
      end
    end
  end
end
